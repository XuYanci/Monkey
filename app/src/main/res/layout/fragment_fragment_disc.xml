<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.FragmentDisc">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:id="@+id/textView5"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/ll_trending">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trending"
            android:gravity="center_horizontal|left"
            android:layout_weight="1"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:id="@+id/textView6"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_arraw_right"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/ll_showcases">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="showcases"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|left"
            android:layout_weight="1"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:id="@+id/textView7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_arraw_right"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/ll_dynamic">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|left"
            android:layout_weight="1"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:id="@+id/textView8" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_arraw_right"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/ll_search">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|left"
            android:layout_weight="1"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:id="@+id/textView9" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_arraw_right"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/ll_githubranking">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="githubranking"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|left"
            android:layout_weight="1"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:id="@+id/textView10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_arraw_right"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/ll_githubawards">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="github-awards"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|left"
            android:layout_weight="1"
            android:textSize="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:id="@+id/textView11" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_arraw_right"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>
